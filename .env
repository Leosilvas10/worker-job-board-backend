# CONFIGURAÇÃO DE PRODUÇÃO - SITE DO TRABALHADOR
NODE_ENV=production
PORT=3001

# Banco de dados - SQLite local no servidor
DB_FILE=./leads.db
DATABASE_URL=file:./leads.db

# CORS - URLs de produção permitidas
CORS_ORIGIN=http://localhost:3000,https://sitedotrabalhador.com.br,https://www.sitedotrabalhador.com.br,https://api.sitedotrabalhador.com.br

# Segurança - JWT para autenticação admin
JWT_SECRET=chave_secreta_producao_64_caracteres_muito_forte_123456789
JWT_EXPIRES_IN=24h

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Configurações de produção
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24h
LOG_LEVEL=info
