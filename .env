# Ambiente de desenvolvimento
NODE_ENV=development
PORT=3001

# Banco de dados - SQLite local para testes
DB_FILE=./leads.db
DATABASE_URL=file:./leads.db

# CORS - URLs permitidas durante desenvolvimento (libera só localhost)
CORS_ORIGIN=http://localhost:3000

# Segurança - JWT para autenticação
JWT_SECRET=chave_super_secreta_de_teste
JWT_EXPIRES_IN=12h

# Admin padrão (desenvolvimento, troque em produção!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Log (mais detalhado para debug)
LOG_LEVEL=debug
